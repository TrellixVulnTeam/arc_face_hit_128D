<!doctype html>
<html lang="en">

<%- include("../layout/head",{title:"Hệ thống giám sát và điểm danh"}) %>

<body>

    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="img/sidebar-5.jpg">
            <%- include("../layout/sidebar")%>
        </div>
        <div class="main-panel">
            <%- include("../layout/header")%>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Danh sách thông tin thành viên đăng ký</h4>
                                </div>
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <th>ID</th>
                                            <th>Họ tên</th>
                                            <th>Địa chỉ</th>
                                            <th>Thông tin</th>
                                            <th>Trạng thái</th>
                                        </thead>
                                        <tbody>
                                            <% listMember.forEach((member, index)=>{ %>
                                            <tr>
                                                <td><span class="label label-default"><%=member.member_id%></span></td>
                                                <td><span class="label label-primary"><%=member.member_name%></span>
                                                </td>
                                                <td><span class="label label-primary"><%=member.member_address%></span>
                                                </td>
                                                <td><span
                                                        class="label label-primary"><%=member.member_extrainfo%></span>
                                                </td>

                                                <td>
                                                    <% if(member.member_status === 1) { %>
                                                    <span class="label label-success">Đang hoạt động</span>
                                                    <%} else {%>
                                                    <span class="label label-primary">Không hoạt động</span>
                                                    <%}%>
                                                        </td>
                                                    </tr>
                                                        <%})%>

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <footer class="footer">
                <%-include("../layout/footer")%>
            </footer>

        </div>
    </div>
</body>

<%-include("../layout/footer_js")%>

</html>